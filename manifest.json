{
    "name": "Github Share Repository ",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Github Share Repository offers a flexible way to share any Github pages to Twitter, HackerNews, Reddit etc. easily.",
    "icons": {
        "16": "/img/icons/icon_16.png",
        "36": "/img/icons/icon_36.png",
        "128": "/img/icons/icon_128.png",
        "256": "/img/icons/icon_256.png"
    },
    "content_scripts": [{
        "js": ["content_script.js"],
        "matches": ["https://github.com/*/*"]
    }],
    "web_accessible_resources": ["script.js"],
    "permissions": [
          "webRequest",
          "webRequestBlocking",
          "*://*.addtoany.com/",
          "https://github.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}